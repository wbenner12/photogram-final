<h1>List of users</h1>

<hr>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_users.each do |a_user| %>

    <tr>
      <td>
        <%= a_user.username %>
      </td>

      <td>
        <% if a_user.private? %>
          Yes
        <% else %>
          No
        <% end %>
      </td>

      <td>
        <a href="/users/<%= a_user.username %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
